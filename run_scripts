mkdir -p results
chmod +x build/benchmark-*

for T in 1, 2, 4, 8, 16; do
  export OMP_NUM_THREADS=$T
  ./build/sobel_cpu_omp_offload $N > results/sobel-cpu-omp-$N
done

for T in 32, 64, 128, 256, 512, 1024; do
  for B in 1, 4, 16, 64, 256, 1024, 4096; do
    ./build/sobel_gpu $B $T > results/sobel-gpu-$B-$T
  done
done

./build/sobel_cpu_omp_offload > results/sobel-cpu-omp-offload